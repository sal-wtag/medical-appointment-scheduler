<div style="font-family: Arial, sans-serif; max-width: 600px; margin: auto; padding: 20px;">
  <p style="color: green; font-size: 18px; text-align: center;"><%= notice %></p>

  <h1 style="text-align: center; color: #4CAF50; font-size: 32px; margin-bottom: 30px;">Appointments</h1>

  <div id="appointments">
    <% @appointments.each do |appointment| %>
      <div style="background-color: #f8f9fa; border-radius: 5px; padding: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.15); margin-bottom: 20px;">
        <%= render 'slim_appointment', appointment: appointment %>
        <div style="text-align: center; margin-top: 20px;">
          <%= link_to "Details", appointment, style: "background-color: #4CAF50; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <% if current_user.patient? && appointment.pending? %>
            <%= link_to "Reschedule", edit_appointment_path(appointment), style: "background-color: #007bff; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <% end %>
          <% if current_user.doctor? && appointment.pending? %>
            <%= button_to "Confirm", confirm_appointment_path(appointment), method: :put, style: "background-color: purple; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <% end %>
          <% if !current_user.admin? && !appointment.canceled? %>
            <%= button_to "Cancel", cancel_appointment_path(appointment), method: :put, style: "background-color: orange; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <% end %>
          <% if current_user.admin? %>
            <%= button_to "Delete", appointment_path(appointment), method: :delete, style: "background-color: red; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if current_user.patient? %>
    <div style="text-align: center; margin-top: 30px;">
      <%= link_to "New appointment", new_appointment_path, style: "background-color: #4CAF50; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px;" %>
    </div>
  <% end %>
</div>
