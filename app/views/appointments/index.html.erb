<div style="font-family: Arial, sans-serif; max-width: 600px; margin: auto; padding: 20px;">
  <p style="color: green; font-size: 18px; text-align: center;"><%= notice %></p>

  <h1 style="text-align: center; color: #4CAF50; font-size: 32px; margin-bottom: 30px;">Appointments</h1>

  <div id="appointments">
    <% @appointments.each do |appointment| %>
      <div style="background-color: #f8f9fa; border-radius: 5px; padding: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.15); margin-bottom: 20px;">
        <div id="<%= dom_id appointment %>" style="padding: 10px; border-radius: 5px; margin-bottom: 10px;">
          <div style="display: flex; align-items: center;">
            <span style="display: inline-block; padding: 5px 10px; border-radius: 5px; background-color: <%= appointment.status == 'confirmed' ? '#28a745' : appointment.status == 'pending' ? '#ffc107' : '#dc3545' %>; color: white;"><strong><%= appointment.status.capitalize %></strong></span>
            <p style="margin-left: 10px;">
              <%= link_to appointment.patient.full_name, user_path(appointment.patient), style: "color: #4CAF50; text-decoration: none; font-weight: bold;" %> with Dr. <%= link_to appointment.doctor.full_name, user_path(appointment.doctor), style: "color: #4CAF50; text-decoration: none; font-weight: bold;" %>, <%= appointment.duration_minutes %> minutes @ <%= appointment.scheduled_time.strftime('%I:%M %p') %> on <%= appointment.scheduled_time.strftime('%d %b, %Y') %>.
            </p>
          </div>
        </div>
        <div style="text-align: center; margin-top: 20px;">
          <%= link_to "Details", appointment, style: "background-color: #4CAF50; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
          <%= link_to "Reschedule", edit_appointment_path(appointment), style: "background-color: #007bff; color: white; padding: 10px 0; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px; width: 150px;" %>
        </div>
      </div>
    <% end %>
  </div>

  <div style="text-align: center; margin-top: 30px;">
    <%= link_to "New appointment", new_appointment_path, style: "background-color: #4CAF50; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border: none; border-radius: 5px;" %>
  </div>
</div>
