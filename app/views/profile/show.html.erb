<%# app/views/profile/show.html.erb %>

<div style="font-family: Arial, sans-serif; margin: 0 auto; max-width: 600px; padding: 20px;">
  <h1 style="text-align: center; color: #3f51b5;">Profile</h1>

  <div style="background-color: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); margin-bottom: 20px; padding: 20px;">
    <h2 style="color: #3f51b5;"><%= @current_user.full_name.upcase %></h2>
    <span style="background-color: <%= @current_user.gender == 'Male' ? '#2196f3' : @current_user.gender == 'Female' ? '#e91e63' : '#9e9e9e' %>; color: #fff; padding: 2px 6px; border-radius: 4px; margin-right: 5px;"><%= @current_user.gender %></span>
    <span style="background-color: <%= @current_user.role == 'Admin' ? '#4caf50' : @current_user.role == 'Patient' ? '#ff9800' : '#9c27b0' %>; color: #fff; padding: 2px 6px; border-radius: 4px; margin-right: 5px;"><%= @current_user.role %></span>
    <span style="background-color: <%= @current_user.status == 'Active' ? '#4caf50' : @current_user.status == 'Pending' ? '#ff9800' : '#f44336' %>; color: #fff; padding: 2px 6px; border-radius: 4px;"><%= @current_user.status %></span>
    <p style="margin-top: 10px;"><strong>Email:</strong> <%= @current_user.email %></p>
    <p style="margin-bottom: 10px;"><strong>Phone Number:</strong> <%= @current_user.phone_number %></p>
    <p style="margin-bottom: 10px;"><strong>Date of Birth:</strong> <%= @current_user.date_of_birth.strftime('%B %d, %Y') %></p>
  </div>

  <%= render partial: @current_profile_partial, locals: { current_profile: @current_profile } %>

  <div style="text-align: center;">
    <%= link_to 'Edit Profile', edit_profile_path, style: "background-color: #3f51b5; border: none; border-radius: 4px; color: #fff; padding: 10px 20px; text-decoration: none;" %>
  </div>
</div>
