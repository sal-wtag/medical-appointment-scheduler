<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; box-sizing: border-box;">
  <section style="margin-bottom: 20px;">
    <h1 style="text-align: center; color: #4CAF50; font-size: 2em; margin-bottom: 20px;">Edit User Information</h1>
    <%= render "users/edit_form", user: @current_user %>
  </section>

  <hr style="border: none; border-top: 1px solid; margin: 20px 0;">

  <section style="margin-bottom: 20px;">
    <h1 style="text-align: center; color: #3f51b5; font-size: 2em; margin-bottom: 20px;">Update <%= "#{@current_user.role.capitalize}" %> Profile</h1>
    <%= render "#{@current_profile_partial}_form", profile: @current_profile %>
  </section>

  <br>

  <div style="text-align: center; margin-top: 20px;">
    <%= link_to "Show Profile", profile_path, style: "color: #3f51b5; text-decoration: none; border-bottom: 1px solid #3f51b5;" %> |
    <%= link_to "Back to Home", root_path, style: "color: #3f51b5; text-decoration: none; border-bottom: 1px solid #3f51b5;" %>
  </div>
</div>
