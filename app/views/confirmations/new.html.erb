<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; box-sizing: border-box; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);">
  <h1 style="text-align: center; color: #4CAF50; font-size: 2em; margin-bottom: 20px;">Resend Confirmation Email</h1>

  <% if flash[:notice] %>
    <div style="background-color: #dff0d8; color: #3c763d; padding: 10px; margin-bottom: 20px; border: 1px solid #d6e9c6;">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div style="background-color: #f2dede; color: #a94442; padding: 10px; margin-bottom: 20px; border: 1px solid #ebccd1;">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <h2 style="text-align: center; color: #333; font-size: 1.5em; margin-bottom: 20px;">Please enter your email to resend the confirmation</h2>

  <%= render "form" %>

  <br>

  <div style="text-align: center; margin-top: 20px;">
    <%= link_to "Back", root_path, style: "color: #4CAF50; text-decoration: none; border-bottom: 1px solid #4CAF50;" %>
  </div>
</div>
