<div id="<%= dom_id doctor %>" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; gap: 20px; margin-bottom: 20px; padding: 20px; border: 1px solid #ddd; border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s;">
  <div style="display: flex; flex-direction: column; justify-content: space-between;">
    <strong style="color: #333; font-size: 1.5em;"><%= doctor.full_name %></strong>
    <div style="display: flex; align-items: center; gap: 10px;">
      <div style="background-color: purple; color: #fff; padding: .375rem .75rem; border-radius: .25rem;"><%= doctor.profile.specialty %></div>
    </div>
  </div>
  
  <div style="display: flex; flex-direction: column; gap: 10px;">
    <%= link_to 'Details', doctor_path(doctor), style: "color: #fff; background-color: #28a745; border-color: #28a745; display: block; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; border-radius: .25rem; margin-bottom: 10px; text-decoration: none;" %>
    <%= link_to 'Book Appointment', new_appointment_path(doctor_id: doctor.id), style: "color: #fff; background-color: #007bff; border-color: #007bff; display: block; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; border-radius: .25rem; text-decoration: none;" %>
  </div>
</div>
