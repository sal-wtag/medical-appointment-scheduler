<div style="font-family: Arial, sans-serif; max-width: 400px; margin: 0 auto; padding: 20px; box-sizing: border-box; background-color: #f8f9fa; border-radius: 5px;">
	<h1 style="text-align: center; color: #333; font-size: 2em; margin-bottom: 20px;">Reset Password</h1>
	<%= form_for(@user, url: reset_path(token: @verification_token), html: { method: :put }) do |form| %>
		<%= render partial: 'application/errors', locals: { instance: @user } %>
		
		<div style="margin-bottom: 20px;">
			<%= form.label :new_password, style: "font-weight: bold;" %><br>
			<%= form.password_field :new_password, style: "width: 100%; padding: 10px; box-sizing: border-box;" %>
		</div>
		
		<div style="margin-bottom: 20px;">
			<%= form.label :new_password_confirmation, style: "font-weight: bold;" %><br>
			<%= form.password_field :new_password_confirmation, style: "width: 100%; padding: 10px; box-sizing: border-box;" %>
		</div>
		
		<div>
			<%= form.submit "Change", style: "background-color: #4CAF50; border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;" %>
		</div>
	<% end %>
</div>
